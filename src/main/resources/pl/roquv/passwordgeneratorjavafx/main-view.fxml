<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600" prefWidth="450" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.roquv.passwordgeneratorjavafx.Controllers.AppWindowController">

  <stylesheets>
    <URL value="@style.css" />
  </stylesheets>

  <!-- Header -->
  <HBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
    <ImageView fitHeight="50" fitWidth="50">
      <Image url="@icons/main-icon.png" />
    </ImageView>
    <Label alignment="CENTER" styleClass="header-label" text="Password Generator" />
  </HBox>

  <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="65">

    <VBox alignment="CENTER" spacing="10">
      <!--Password Length Text-->
      <Text fx:id="passwordLengthText" styleClass="password-length-text" text="Characters: " />

      <!--Password Length Slider -->
      <Slider fx:id="passwordLengthSlider" styleClass="password-length-slider" />
    </VBox>

    <GridPane alignment="CENTER" hgap="10" vgap="10">
      <CheckBox fx:id="checkBoxLowercase" styleClass="checkbox-text" text="Lowercase (a-z)" GridPane.columnIndex="0" GridPane.rowIndex="0" />
      <CheckBox fx:id="checkBoxUppercase" styleClass="checkbox-text" text="Uppercase (A-Z)" GridPane.columnIndex="0" GridPane.rowIndex="1" />
      <CheckBox fx:id="checkBoxNumbers" styleClass="checkbox-text" text="Numbers (0-9)" GridPane.columnIndex="1" GridPane.rowIndex="0" />
      <CheckBox fx:id="checkBoxSpecialSymbols" styleClass="checkbox-text" text="Symbols (!@#)" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
    </GridPane>

    <!--Generate Button-->
    <Button onAction="#handleGenerateButtonClick" styleClass="generate-button" text="Generate Password" />

    <HBox alignment="CENTER">
      <!--Password Label-->
      <TextField fx:id="passwordTextField" styleClass="password-text-field" />

      <!--Copy to Clipboard Button-->
      <Button onAction="#handleCopyToClipboardButtonClick" styleClass="copy-button">
        <graphic>
          <ImageView fitHeight="30" fitWidth="30">
            <Image url="@icons/clipboard-icon.png" />
          </ImageView>
        </graphic>
      </Button>
    </HBox>

    <StackPane>
      <HBox alignment="CENTER_RIGHT" spacing="13">
        <!--Settings Button-->
        <Button onAction="#handleSettingsButtonClick" styleClass="settings-button">
          <graphic>
            <ImageView fitHeight="24" fitWidth="24">
              <Image url="@icons/settings-icon.png" />
            </ImageView>
          </graphic>
        </Button>
        <!--Help Button-->
        <Button onAction="#handleHelpButtonClick" styleClass="help-button">
          <graphic>
            <ImageView fitWidth="24" fitHeight="24">
              <Image url="@icons/help-icon.png"/>
            </ImageView>
          </graphic>
        </Button>
      </HBox>

      <HBox alignment="CENTER" maxWidth="200">
        <!--Save Password Button-->
        <Button onAction="#handleSavePasswordButtonClick" styleClass="save-password-button" text="Save Password" />

        <!-- Saved Passwords Window Button -->
        <Button onAction="#handleOpenPasswordsWindowButtonClick" styleClass="open-saved-passwords-button">
          <graphic>
            <ImageView fitWidth="25" fitHeight="25">
              <Image url="@icons/savedPassword-icon.png"/>
            </ImageView>
          </graphic>
        </Button>
      </HBox>
    </StackPane>

  </VBox>

</AnchorPane>
