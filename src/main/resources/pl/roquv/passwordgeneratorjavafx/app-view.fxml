<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane prefHeight="600" prefWidth="450" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.roquv.passwordgeneratorjavafx.Controllers.AppWindowController">

  <stylesheets>
    <URL value="@style.css" />
  </stylesheets>

  <!--Header Label-->
  <Label alignment="CENTER" styleClass="header-label" text="Password Generator" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="10" />

  <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="60">

    <HBox alignment="CENTER" spacing="20">
      <!--Password Length Title-->
      <Text styleClass="password-length-title" text="Password Length" />
      <!--Password Length Label-->
      <TextField fx:id="passwordLengthLabel" styleClass="password-length"/>
    </HBox>

    <GridPane alignment="CENTER" vgap="10" hgap="10">
      <CheckBox fx:id="checkBoxLowercase" text="Lowercase" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="checkbox-text"/>
      <CheckBox fx:id="checkBoxUppercase" text="Uppercase" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="checkbox-text"/>
      <CheckBox fx:id="checkBoxNumbers" text="Numbers" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="checkbox-text"/>
      <CheckBox fx:id="checkBoxSpecialSymbols" text="Symbols" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="checkbox-text"/>
    </GridPane>

    <!--Generate Button-->
    <Button onAction="#handleGenerateButtonClick" styleClass="generate-button" text="Generate Password" />

    <HBox alignment="CENTER">
      <!--Password Label-->
      <TextField fx:id="passwordLabel" styleClass="password-output"/>

      <!--Copy to Clipboard Button-->
      <Button onAction="#handleCopyToClipboardButtonClick" styleClass="copy-button">
        <graphic>
          <ImageView fitWidth="30" fitHeight="30">
            <Image url="@icons/clipboard-icon.png"/>
          </ImageView>
        </graphic>
      </Button>
    </HBox>

    <StackPane>
      <!--Save Password Button-->
      <Button fx:id="saveButton" text="Save Password" onAction="#handleSaveButtonClick" alignment="CENTER" styleClass="save-button"/>

      <HBox alignment="CENTER_RIGHT" spacing="10">
        <!--Settings Button-->
        <Button onAction="#handleSettingsButtonClick" alignment="BASELINE_LEFT" styleClass="settings-button">
          <graphic>
            <ImageView fitWidth="24" fitHeight="24">
              <Image url="@icons/settings-icon.png"/>
            </ImageView>
          </graphic>
        </Button>
        <!--Help Button-->
        <Button onAction="#handleHelpButtonClick" alignment="BASELINE_LEFT" styleClass="help-button">
          <graphic>
            <ImageView fitWidth="24" fitHeight="24">
              <Image url="@icons/help-icon.png"/>
            </ImageView>
          </graphic>
        </Button>
      </HBox>
    </StackPane>

  </VBox>

</AnchorPane>
